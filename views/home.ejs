<!DOCTYPE html>
<html>
    <%- include('head', {meta_date: { title: "LetsGetChecked - Blog", description: "LetsGetChecked's Blog for in company inovation and insite into Irelands fastest growing Health startup" }}); %>
    <%- include('header'); -%>

      
    <!-- Latest Posts -->
    <section class="latest"> 
        <div class="container">
            
            <div class="row">
            <% if (typeof data !== "undefined") { %>
                <% for(let i = 0; i < data.length; i++) { %>
                    <div class="post col-md-4">
                        <div class="post-thumbnail"><a href="blog/<%= data[i].slug %>"><img src="<%-'img/blog-'+((i + 1) % 7)+'.jpg'%>" alt="..." class="img-fluid"></a></div>
                        <div class="post-details">
                        <div class="post-meta d-flex justify-content-between">
                            <div class="date"><%- data[i].publish_date %></div>
                            <div class="category"><a href="#">Business</a></div>
                        </div><a href="blog/<%= data[i].slug %>">
                            <h3 class="h4"><%- data[i].title %></h3></a>
                        <p class="text-muted"><%- data[i].description %></p>
                        </div>
                    </div>
                <% } %>
            <% } %>
            <!-- <button onclick="showAllblogs()" class="navbar-toggler">Show more</button> -->
            </div>
        </div>
    </section>

    <%- include('footer', { all_blogs: data }); %>
</html>